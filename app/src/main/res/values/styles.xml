<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/bold</item>
        <item name="textAppearanceCaption">@font/bold</item>
        <item name="textAppearanceBody1">@font/bold</item>
    <item name="buttonStyle">@style/buttonstyle</item>

    </style>
    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/bold</item>
        <item name="textAppearanceCaption">@font/bold</item>
        <item name="textAppearanceBody1">@font/bold</item>
        <item name="buttonStyle">@style/buttonstyle</item>
    </style>

    <style name="buttonstyle" parent="TextAppearance.AppCompat.Button">
        <item name="backgroundDrawable">@drawable/bg_rounded_button</item>

        <item name="android:textColor">@color/white</item>
        <item name="textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="titlebartext" parent="Widget.MaterialComponents.Toolbar">
<!--        <item name="fontFamily">@font/bold</item>-->
        <item name="textAllCaps">true</item>
        <item name="textSize">16dp</item>
    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RobotoBoldTextAppearance">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:textSize">@dimen/text_size_large</item>
</style>
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">@dimen/nav_view_textview_size</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_X_small</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>


    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" >
        <item name="color">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>
