<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/space_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/space_10"
    app:cardElevation="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/space_20"
            android:id="@+id/img_product"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/rel_wishlist"
            android:layout_toRightOf="@+id/img_product"
            android:padding="@dimen/space_5"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="KIWI Fruit"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/space_18"
                android:id="@+id/name_product"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs175/12"
                android:layout_marginTop="@dimen/space_5"
                android:textSize="@dimen/space_16"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:id="@+id/rate_product"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_product"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_subcat_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/minus"
                    app:tint="@color/colorAccent" />
                <TextView
                    android:id="@+id/tv_subcat_contetiy"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_5"
                    android:textAlignment="center"
                    android:enabled="false"
                    android:text="1"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    />
                <ImageView
                    android:id="@+id/iv_subcat_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/plus"
                    app:tint="@color/colorAccent" />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 175"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/space_10"
                android:textStyle="bold"
                android:id="@+id/product_total"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/space_20"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:src="@drawable/ic_close"
                android:fontFamily="@font/bold"
                android:layout_alignParentEnd="true"
                android:id="@+id/remove"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/space_5"
                app:tint="@color/colorAccent" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>