<LinearLayout android:layout_width="180dp"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <RelativeLayout
            android:layout_width="80dp"
            android:id="@+id/rel_dis"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ribbinlayout"
                android:rotation="180"/>
            <TextView
                android:id="@+id/product_discount"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:text="20% off "
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_margin="@dimen/space_5"
            android:src="@drawable/wishbefore"/>

        <ImageView
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_margin="@dimen/space_5"
            android:src="@drawable/wish_after"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/rel_dis"
            android:layout_centerInParent="true"
            android:src="@drawable/icon"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#CBCCBC">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_5"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kiwi Fruit"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:layout_marginLeft="@dimen/space_5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 160"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/space_5"
                android:textStyle="bold"
                android:fontFamily="@font/bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_10"
            >

            <Button
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_rounded_button"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:padding="0dp"
                android:text="Add"
                android:textAlignment="center"
                android:textSize="@dimen/space_10"
                app:backgroundTint="@color/colorAccent" />


            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:layout_width="140dp"
                android:layout_height="40dp"
                app:textSize="7dp"

                android:textAlignment="center"
                app:initialNumber="0"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:id="@+id/elegantButton"
                app:backGroundColor="@color/colorAccent"
                app:backgroundDrawable="@drawable/bg_rounded_button"
                />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>