<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardPreventCornerOverlap="false"
    android:elevation="@dimen/space_4"
    android:layout_marginLeft="@dimen/space_5"
    android:background="@color/white"
    card_view:cardUseCompatPadding="true"
    android:layout_marginBottom="@dimen/space_5">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_top"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardPreventCornerOverlap="false"
        android:elevation="@dimen/space_4"
        android:layout_margin="@dimen/space_4"
        android:background="@color/white"
        card_view:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:id="@+id/relative_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/space_5"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="20dp"
                    android:gravity="top|center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rel_img"
                        android:layout_width="match_parent"
                        android:layout_height="165dp">

                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/icon"
                            android:scaleType="fitXY"/>
                        <RelativeLayout
                            android:id="@+id/rel_out"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="false"
                            android:visibility="gone"

                            >
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_height="40dp"
                                android:src="@drawable/soldout1"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/darker_gray"
                        />


                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="gravity"
                        android:text="Product Name"
                        android:layout_marginLeft="6dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/product_prize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:text="Price :"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/product_mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_3"
                            android:layout_toRightOf="@id/product_prize"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/space_2"
                            android:text="Price"
                            android:textAlignment="gravity"
                            android:textColor="#ff0023"
                            android:textSize="13sp" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <TextView
                            android:id="@+id/txtId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_10"
                            android:textSize="10dp"
                            android:text="Weight :"
                            android:visibility="invisible"
                            />

                        <TextView
                            android:id="@+id/txtVar"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_10"
                            android:textSize="10dp"

                            android:text="Weight :"

                            android:visibility="invisible"
                            />
                        <TextView
                            android:id="@+id/single_varient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10"
                            android:text="1kg"
                            android:textAlignment="gravity"
                            android:padding="@dimen/space_2"
                            android:layout_marginTop="@dimen/space_5"
                            android:visibility="gone"

                            />
                        <RelativeLayout
                            android:id="@+id/rel_variant"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/space_5"
                            android:layout_marginLeft="@dimen/space_10"
                            android:layout_marginRight="@dimen/space_10"
                            android:visibility="gone"
                            android:background="@drawable/relative_unit_layout">

                            <TextView
                                android:id="@+id/unit_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/space_5"
                                android:layout_marginRight="35dp"
                                android:text=""
                                android:textColor="@android:color/darker_gray"
                                android:textSize="15sp" />
                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/ic_arrow_drop_down_black_24dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp">

                            </ImageView>

                        </RelativeLayout>

                    </RelativeLayout>



                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/wish_before"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/space_5"
                android:layout_alignParentEnd="true"
                android:src="@drawable/wish_before"/>
            <ImageView
                android:id="@+id/wish_after"
                android:layout_alignParentEnd="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/space_5"
                android:src="@drawable/wish_after"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ribbinlayout"
                    android:rotation="180"/>
                <TextView
                    android:id="@+id/product_discount"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" discount"
                    android:layout_centerVertical="true"

                    android:padding="2dp"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_10"
                android:id="@+id/rel_add"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/product_qty"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    app:textSize="7dp"
                    app:initialNumber="0"
                    app:finalNumber="10"
                    android:layout_centerHorizontal="true"
                    app:backGroundColor="@color/colorAccent"
                    app:backgroundDrawable="@drawable/bg_rounded_button"
                    android:visibility="gone"
                    app:textColor="@color/white"
                    >
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:fontFamily="@font/bold"
                    android:id="@+id/btn_add"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:background="@drawable/bg_rounded_button"
                    android:text="Add"
                    android:textColor="@color/white" />

            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>


