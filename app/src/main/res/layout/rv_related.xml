        android:id="@+id/card_product">   -->
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="4dp"
      >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_img"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/icon"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:id="@+id/rel_out"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:visibility="gone"

                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_height="40dp"

                        android:src="@drawable/soldout1"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/rel_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/product_price"
                    android:fontFamily="@font/aileron_regular"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="price"
                    android:padding="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/product_mrp"
                    android:layout_toRightOf="@+id/product_price"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_regular"
                    android:text="price"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    />
<!--                <binplus.Jabico.Fonts.LatoBLack-->
<!--                    android:id="@+id/product_discount"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->

<!--                    android:layout_toRightOf="@id/product_mrp"-->
<!--                    android:text="discount"-->
<!--                    android:paddingTop="2dp"-->
<!--                    android:textSize="14sp"-->
<!--                    android:textColor="@android:color/holo_red_dark"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:layout_marginLeft="@dimen/space_5"/>-->
            </RelativeLayout>
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/aileron_regular"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/product_price"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"

                />

            <RelativeLayout
                android:id="@+id/weight"
                android:layout_below="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:layout_marginBottom="@dimen/space_10">
                <TextView
                    android:id="@+id/txtId"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/aileron_regular"
                    android:textSize="10dp"
                    android:text="Weight :"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/txtVar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/aileron_regular"
                    android:textSize="10dp"
                    android:text="Weight :"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/product_weight"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="1kg"
                    android:fontFamily="@font/aileron_regular"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/space_2"
                    />
                <RelativeLayout
                    android:id="@+id/rel_variant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                   android:gravity="center_vertical"
                    android:visibility="gone"
                    android:background="@drawable/relative_unit_layout">
                    <TextView
                        android:id="@+id/unit_type"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:padding="@dimen/space_2"
                        android:fontFamily="@font/aileron_regular"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="text"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <ImageView

                        android:background="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_width="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_height="25dp">

                    </ImageView>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_alignParentBottom="true"
                >

                <Button
                    android:fontFamily="@font/bold"
                    android:id="@+id/add_btn"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_rounded_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="add"
                    app:backgroundTint="@color/colorAccent"
                    android:textColor="@color/white"

                    />
                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    app:textSize="7dp"
                    app:initialNumber="1"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/elegantButton"
                    app:backGroundColor="@color/colorAccent"
                    app:backgroundDrawable="@drawable/bg_rounded_button"
                    android:visibility="gone"
                    />




            </RelativeLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"

           >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ribbinlayout"
                android:id="@+id/product_discount_img"
                android:rotation="180"/>
        <TextView
            android:id="@+id/product_discount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" discount"
            android:fontFamily="@font/aileron_regular"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:textColor="@android:color/white"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/wish_before"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/space_8"
            app:srcCompat="@drawable/wish_before"
            />
        <ImageView
            android:id="@+id/wish_after"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/space_8"
            app:srcCompat="@drawable/wish_after"
            android:visibility="gone"
            />
        <RelativeLayout

            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:src="@drawable/soldout1"/>
        </RelativeLayout>

    </RelativeLayout>
  <!--  </androidx.cardview.widget.CardView></RelativeLayout>-->
</RelativeLayout>